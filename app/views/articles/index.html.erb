<h1>Articles</h1>
<% @articles.each do |article| %>

  <h2 class="title"> <%= link_to article.title, article_path(article) %></h2>
  <%= link_to "Delete", article_path(article),
    method: :delete,
    data: { confirm: "Are you sure?"} %>
<% end %>
<p><%= link_to "Add new Article", new_article_path  %></p>
